<ul class="da-post">
    <% @activity['messages'].each_with_index do | message, index | %>
        <li class="da-post-item">
            <%= image_tag "/assets/avatar/#{message['avatar']}.png", :class => "da-post-avatar" %>
            <div class="da-post-body">
                <h3 class="da-post-heading"><%= message['name'] %></h3>
                <p class="da-post-message"><%= message['message'] %></p>
                <div class="da-post-time"><%= message['time'] %></div>
                <button class="da-task-button da-post-like" data-x-role="likebutton" <% if index === @activity['target'] %> data-is-target="true" <% end %>>Like</button>
            </div>
        </li>
    <% end %>
</ul>