<% content_for :body do %>
    
    <h1>Login</h1>

    <%= form_for @participant_session do |f| %>
      <% if @participant_session.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@participant_session.errors.count, "error") %> prohibited:</h2>
        <ul>
          <% @participant_session.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
      <% end %>
      <%= f.label :email %><br />
      <%= f.text_field :email %><br />
      <br />
      <%= f.label :password %><br />
      <%= f.password_field :password %><br />
      <br />
      <%= f.submit "Login", :class => "da-button" %>
    <% end %>

<% end %>